<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_spam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true"
    android:paddingTop="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/air_pollution"
            android:id="@+id/imageViewCateAdmin"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="This is the title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewCateAdmin"
            android:layout_toLeftOf="@+id/imageViewPictureAdmin"
            android:layout_toEndOf="@+id/imageViewCateAdmin"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/textViewTitleAdmin"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageViewPictureAdmin"/>

        <TextView
            android:text="hh:mm:ss dd/MM/yyyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewCateAdmin"
            android:layout_alignLeft="@+id/textViewTitleAdmin"
            android:layout_alignStart="@+id/textViewTitleAdmin"
            android:id="@+id/textViewTimeAdmin"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the description This is the description This is the description This is the description"
            android:maxLines="3"
            android:id="@+id/textViewDescAdmin"
            android:layout_below="@+id/textViewTimeAdmin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/imageViewPictureAdmin"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_spam2"
            android:layout_below="@+id/textViewDescAdmin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView"
            android:layout_marginRight="2dp"/>

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSpamAdmin"
            android:layout_below="@+id/textViewDescAdmin"
            android:layout_toRightOf="@+id/imageView"
            android:background="#ce0c0c"
            android:textColor="#ffffff"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="italic"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>